<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"   
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:focusable="false"
  android:focusableInTouchMode="false"
  android:background="#ffffff"
  android:paddingBottom="5dp">
	<RelativeLayout 
		android:id = "@+id/s_date_layout"
		android:layout_width="fill_parent"
		android:layout_height="30dp"
		android:background="@drawable/bg_bordered"
		android:visibility="gone">
		  <com.liviu.apps.shopreporter.ui.LTextView
		  	android:id = "@+id/s_date"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:layout_centerInParent="true"	  	
		  	android:textColor="#575757"		  	
		  	android:singleLine="true"
		  	android:ellipsize="end"
		  	android:text = "July, 2 2011"
		  	android:textSize = "17sp"/>  			
	</RelativeLayout>
	<RelativeLayout 
		android:id = "@+id/s_content_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/s_date_layout">
		  <ImageView
		  	android:id = "@+id/s_image"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:layout_centerVertical="true"
		  	android:layout_alignParentLeft="true"
		  	android:layout_marginLeft="5dp"
		  	android:src = "@drawable/ic_title_new_shopping_session"/>
		  <com.liviu.apps.shopreporter.ui.LTextView
		  	android:id = "@+id/s_name"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:text = "Session name"
		  	android:layout_toRightOf = "@id/s_image"
		  	android:layout_toLeftOf="@+id/s_money"	  	
		  	android:textColor="#575757"
		  	android:layout_marginLeft="7dp"
		  	android:layout_marginTop="3dp"
		  	android:singleLine="true"
		  	android:ellipsize="end"
		  	android:textStyle="bold"
		  	android:textSize = "17sp"/>  	
		  <com.liviu.apps.shopreporter.ui.LTextView
		  	android:id = "@+id/s_details"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:text = "Test session"
		  	android:layout_toRightOf = "@id/s_image"	  
		  	android:layout_toLeftOf="@id/s_money"
		  	android:layout_below="@id/s_name"  	
		  	android:textColor="#575757"
		  	android:layout_marginLeft ="7dp"
		  	android:textSize = "12sp"/>
		  <com.liviu.apps.shopreporter.ui.LTextView
		  	android:id = "@id/s_money"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:text = "$123.45"
		  	android:layout_alignParentRight = "true"
		  	android:layout_marginRight="5dp"
		  	android:layout_centerVertical="true"	  	
		  	android:textColor="#575757"	  	
		  	android:textSize = "17sp"/>	  	
		  <View
		  	android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="#cccccc"  		
			android:layout_alignParentTop="true"/>
		</RelativeLayout>	
</RelativeLayout>
