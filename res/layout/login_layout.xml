<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dadada">
    <RelativeLayout 
	    android:id = "@+id/layout_top"
	    android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:background="@drawable/top_background">    
    </RelativeLayout>
    <RelativeLayout 
    	android:id="@+id/layout_top_bar"
    	android:layout_width="fill_parent"
    	android:layout_height="35dp"
    	android:layout_below="@id/layout_top"
    	android:background="@drawable/top_bar_background">
    	<com.liviu.apps.shopreporter.ui.LTextView
	    	android:id = "@+id/bar_title"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:drawableLeft="@drawable/ic_bar_user"
	    	android:drawablePadding="3dp"
	    	android:layout_alignParentLeft="true"
	    	android:layout_marginLeft="4dp"
	    	android:text="Login"
	    	android:textColor="#575757"
	    	android:textSize="11dp"
	    	android:gravity="center_vertical"  
	    	android:layout_centerVertical="true"/>	    	
    </RelativeLayout>  
    <RelativeLayout 
    	android:id ="@+id/layout_content"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/layout_top_bar"
    	android:background="@drawable/bg_box"  
    	android:paddingBottom="20dp"
    	>
		<com.liviu.apps.shopreporter.ui.LTextView 
			android:id="@+id/static_text_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="2dp"
			android:text = "Name"
			android:textColor="#575757"
			android:textSize="13dp"/>   
		<com.liviu.apps.shopreporter.ui.LEditText
			android:id = "@+id/edtx_user_name"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:textColor="#575757"
			android:hint="Username"
			android:layout_below="@id/static_text_1"
			android:layout_marginLeft="10dp"
			android:paddingLeft="5dp"
			android:layout_marginRight="10dp"
			android:singleLine="true"			
			android:text = "Liviu"
			android:drawableRight="@drawable/ic_edtx_x"
			android:background="@drawable/edtx_background"/>			 
		<com.liviu.apps.shopreporter.ui.LTextView
			android:id="@+id/static_text_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/edtx_user_name"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="2dp"			
			android:text = "Password"
			android:textColor="#575757"
			android:textSize="13dp"/>   
		<com.liviu.apps.shopreporter.ui.LEditText 
			android:id = "@+id/edtx_user_password"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:textColor="#575757"				  
			android:paddingLeft="5dp"	
			android:text = "test"
			android:layout_below="@id/static_text_2"
			android:background="@drawable/edtx_background"
			android:drawableRight="@drawable/ic_edtx_x"
			android:inputType="textPassword"
			android:hint = "Password"
			android:drawablePadding="15dp" 
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"/>							
		<Button 
			android:id = "@+id/but_signup"
			android:layout_width="120dp"
			android:layout_height="40dp"
			android:layout_below="@id/edtx_user_password"
			android:layout_alignParentLeft="true"
			android:textColor="#ffffff"
			android:text="@string/button_signup_text"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/button_background"
			android:drawableLeft="@drawable/ic_button_x" 
			android:drawablePadding="4dp"
			android:paddingLeft="7dp"
			android:gravity="left|center_vertical"
			/>	
		<Button 
			android:id = "@+id/but_login"
			android:layout_width="120dp"
			android:layout_height="40dp"
			android:layout_below="@id/edtx_user_password" 
			android:layout_alignParentRight="true" 
			android:textColor="#ffffff"
			android:text="@string/button_login_text" 
			android:background="@drawable/button_background"		 
			android:layout_marginTop="10dp" 
			android:layout_marginRight="10dp"
			android:drawableLeft="@drawable/ic_button_ok" 
			android:drawablePadding="4dp" 
			android:paddingLeft="7dp" 
			android:gravity="left|center_vertical"			
			/>							  	     	
    </RelativeLayout>    	
</RelativeLayout>
  